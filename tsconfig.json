{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ESNext", "WebWorker"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client",
      "element-plus/global",
      "unplugin-vue-macros/macros-global"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["docs/.vitepress/vitepress/*"],
      "lonsdor-vue3-component": ["packages"]
    }
  },
  "include": [
    "packages/**/**/*",
    "packages/**/*",
    "docs/**/*.ts",
    "play/*.ts",
    "play/*.tsx",
    "play/*.vue",
    "volar.d.ts",
    "typings/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.js"],
  "vueCompilerOptions": {
    "plugins": ["unplugin-vue-macros/volar"]
  }
}
